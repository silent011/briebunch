@import "_sliderCard"

.slider {
    background:#110c0c;
    width:96%;
    height:70%;
    position: fixed;
    top:15%;
    left:2%;
    border-radius: 30px;
    box-shadow: 0 0 15px 0px white ;
    color:white;
    font-family: sans-serif;
    font-size: 2.5vw;
    font-weight: bold;
    letter-spacing: 0.2rem;
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
}